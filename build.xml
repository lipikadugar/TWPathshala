<?xml version="1.0" encoding="UTF-8"?>
<project name="MarsRover" default="unit_tests">
    <target name="compile" >
        <javac srcdir="src;test" includeantruntime="true" destdir="antBuild">
            <classpath location="lib/hamcrest-core-1.3.jar"/>
            <classpath location="lib/junit-4.11.jar"/>
        </javac>
    </target>

    <target name="unit_tests" depends="compile">
        <junit haltonerror="true" haltonfailure="true" printsummary="true">
            <classpath location="lib/hamcrest-core-1.3.jar" path="out"/>
            <classpath location="lib/junit-4.11.jar" path="out"/>
            <test name="com.marsRover.moveRoverTest" haltonfailure="true" haltonerror="true"/>
        </junit>
    </target>
</project>
